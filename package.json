{
  "name": "twig-html-loader",
  "version": "0.1.4",
  "description": "Twig to html loader for webpack",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build -- -w",
    "build": "cross-env NODE_ENV=production babel src -d dist --copy-files",
    "clear": "del-cli dist",
    "prebuild": "npm run clear",
    "prepublish": "npm run build",
    "release": "standard-version",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radiocity/twig-html-loader.git"
  },
  "keywords": [
    "html",
    "twig",
    "loader",
    "webpack",
    "compile",
    "plain"
  ],
  "author": "Alexander A. <radiocity@bk.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/radiocity/twig-html-loader/issues"
  },
  "homepage": "https://github.com/radiocity/twig-html-loader#readme",
  "files": [
    "src",
    "dist"
  ],
  "engines": {
    "node": ">=6.11.5"
  },
  "peerDependencies": {
    "webpack": "^4.0.0"
  },
  "dependencies": {
    "loader-utils": "^1.1.0",
    "twig": "^1.12.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "cross-env": "^5.2.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.3.1",
    "standard-version": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "6.11.5"
          },
          "useBuiltIns": "usage"
        }
      ]
    ]
  }
}
